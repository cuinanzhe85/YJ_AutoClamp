        <Border Grid.Row="0" Margin="10,10" Background="WhiteSmoke" CornerRadius="8">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Grid.ColumnSpan="6" Background="gray" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Total" Margin="5,5,2,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="0" Grid.Column="1" Content="Upper1" Margin="2,5,2,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="0" Grid.Column="2" Content="Upper2" Margin="2,5,2,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="0" Grid.Column="3" Content="Upper3" Margin="2,5,2,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="0" Grid.Column="4" Content="Low1" Margin="2,5,2,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="0" Grid.Column="5" Content="Low2" Margin="2,5,2,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="0" Grid.Column="6" Content="Low3" Margin="2,5,5,2" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"  telerik:CornerRadiusHelper.ClipRadius="8"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="0" Margin="5,2,2,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="1" Grid.Column="1" Content="0" Margin="5,2,2,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="1" Grid.Column="2" Content="0" Margin="5,2,2,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="1" Grid.Column="3" Content="0" Margin="5,2,2,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="1" Grid.Column="4" Content="0" Margin="5,2,2,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="1" Grid.Column="5" Content="0" Margin="5,2,2,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                        <Label Grid.Row="1" Grid.Column="6" Content="0" Margin="2,2,5,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" telerik:CornerRadiusHelper.ClipRadius="8"/>
                    </Grid>
                    
                </Border>

                <ContentControl Grid.Row="1" Grid.Column="0" Content="{Binding AgingCvList[0].AgingList[0]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding AgingCvList[0].AgingList[1]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="1" Grid.Column="2" Content="{Binding AgingCvList[0].AgingList[2]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="1" Grid.Column="3" Content="{Binding AgingCvList[0].AgingList[3]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="1" Grid.Column="4" Content="{Binding AgingCvList[0].AgingList[4]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="1" Grid.Column="5" Content="{Binding AgingCvList[0].AgingList[5]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="2" Grid.Column="0" Content="{Binding AgingCvList[0].AgingList[6]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="2" Grid.Column="1" Content="{Binding AgingCvList[0].AgingList[7]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="2" Grid.Column="2" Content="{Binding AgingCvList[0].AgingList[8]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="2" Grid.Column="3" Content="{Binding AgingCvList[0].AgingList[9]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="2" Grid.Column="4" Content="{Binding AgingCvList[0].AgingList[10]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="2" Grid.Column="5" Content="{Binding AgingCvList[0].AgingList[11]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="3" Grid.Column="0" Content="{Binding AgingCvList[0].AgingList[12]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="3" Grid.Column="1" Content="{Binding AgingCvList[0].AgingList[13]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="3" Grid.Column="2" Content="{Binding AgingCvList[0].AgingList[14]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="3" Grid.Column="3" Content="{Binding AgingCvList[0].AgingList[15]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="3" Grid.Column="4" Content="{Binding AgingCvList[0].AgingList[16]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="3" Grid.Column="5" Content="{Binding AgingCvList[0].AgingList[17]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="4" Grid.Column="0" Content="{Binding AgingCvList[0].AgingList[18]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="4" Grid.Column="1" Content="{Binding AgingCvList[0].AgingList[19]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="4" Grid.Column="2" Content="{Binding AgingCvList[0].AgingList[20]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="4" Grid.Column="3" Content="{Binding AgingCvList[0].AgingList[21]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="4" Grid.Column="4" Content="{Binding AgingCvList[0].AgingList[22]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="4" Grid.Column="5" Content="{Binding AgingCvList[0].AgingList[23]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="5" Grid.Column="0" Content="{Binding AgingCvList[0].AgingList[24]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="5" Grid.Column="1" Content="{Binding AgingCvList[0].AgingList[25]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="5" Grid.Column="2" Content="{Binding AgingCvList[0].AgingList[26]}" ContentTemplate="{StaticResource FloorTemplate}"/>
                <ContentControl Grid.Row="5" Grid.Column="3" Content="{Binding AgingCvList[0].AgingList[27]}" ContentTemplate="{StaticResource FloorTemplate}"/>

                <telerik:RadRadioButton Grid.Row="6" Grid.Column="0" Content="Upper 1" Style="{StaticResource Radio_ButtonStyle}" 
                        Command="{Binding Select_Command}" CommandParameter="Top_Handler"/>
                <telerik:RadRadioButton Grid.Row="6" Grid.Column="1" Content="Upper 2" Style="{StaticResource Radio_ButtonStyle}" 
                        Command="{Binding Select_Command}" CommandParameter="Top_Handler" />
                <telerik:RadRadioButton Grid.Row="6" Grid.Column="2" Content="Upper 3" Style="{StaticResource Radio_ButtonStyle}" 
                        Command="{Binding Select_Command}" CommandParameter="Top_Handler" />
                <telerik:RadRadioButton Grid.Row="6" Grid.Column="3" Content="Low 1" Style="{StaticResource Radio_ButtonStyle}" 
                        Command="{Binding Select_Command}" CommandParameter="Top_Handler" />
                <telerik:RadRadioButton Grid.Row="6" Grid.Column="4" Content="Low 2" Style="{StaticResource Radio_ButtonStyle}" 
                        Command="{Binding Select_Command}" CommandParameter="Top_Handler" />
                <telerik:RadRadioButton Grid.Row="6" Grid.Column="5" Content="Low 3" Style="{StaticResource Radio_ButtonStyle}" 
                        Command="{Binding Select_Command}" CommandParameter="Top_Handler" />
               
            </Grid>
        </Border>
        
        <!--Save / Exit-->
        <Border Grid.Row="1" Margin="10,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Reset" Margin="0,0,5,0" Style="{StaticResource SerialPort_ButtonStyle}" 
                        Command="{Binding Reset_Command}" 
                        CommandParameter="{Binding ElementName=Reset}"/>
                <Button Grid.Column="1" Content="Exit" Margin="5,0,0,0" Style="{StaticResource SerialPort_ButtonStyle}"
                        Command="{Binding Source={x:Static utils:WindowManager.Instance}, Path=CloseCommand}" 
                        CommandParameter="Product"/>
            </Grid>
        </Border>
    </Grid>
</Window>
